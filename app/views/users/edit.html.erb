<div class="container">
  <div class="row">
     <div class="col-xs-8">
       <h2>ユーザー情報編集</h2>

       <div class="new_box">
        <%= form_for @user do |f| %>
         <table class="table table-hover table-inverse">
          <tr>
            <th><%= f.label :ニックネーム %></th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th><%= f.label :email %></th>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <th><%= f.label :プロフィール画像 %></th>
            <td><%= f.attachment_field :profile_image %></td>
          </tr>
          <tr>
            <th><%= f.submit '編集'%></th>
          </tr>
         </table>
        <% end %>
       </div>
     </div>
  </div>
</div>